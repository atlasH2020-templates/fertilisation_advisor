  "components": {
    "schemas": {
      "FieldURN": {
        "type": "string",
        "pattern": "^urn:[a-z][a-z0-9_.\\-]*:[\\w-.]+",
        "description": "Uniform resource name of a field with the syntax `urn:<service_id>:<internal_id>`. <service_id> must be the id of a valid and active ATLAS service"
      },
      "AdviceURN": {
        "type": "string",
        "pattern": "^urn:[a-z][a-z0-9_.\\-]*:[\\w-.]+",
        "description": "Uniform resource name of an advice with the syntax `urn:<service_id>:<internal_id>`. <service_id> must be the id of a valid and active ATLAS service"
      },
      "MonitoringRequest": {
        "type": "object",
        "properties": {
          "field_urn": {
            "$ref": "#/components/schemas/FieldURN"
          },
          "nutrients": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Nutrient"
            }
          },
          "notification_url": {
            "type": "string",
            "format": "uri",
            "description": "Invoked with POST with a 'Recommendation' body (see components) when applicable"
          }
        },
        "required": [
          "field_urn",
          "nutrients"
        ],
        "example": {
          "field_urn": "urn:com.agricircle.atlas.field_data:fdbe6f55-6179-4b88-9177-4afbed33adac",
          "nutrients": [
            "P2O5",
            "K2O"
          ]
        }
      },
      "MonitoringInfo": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": [
              "IN_PROGRESS",
              "CONFIGURATION_REQUIRED",
              "READY",
              "FAILED"
            ],
            "description": "status of the advice preparation"
          },
          "status_message": {
            "type": "string",
            "description": "end-user-friendly message describing the status. In the special case where status is CONFIGURATION_REQUESTED, the message MUST be a browser URL to a configuration UI where further configuration can take place"
          },
          "recommendations": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Recommendation"
            }
          }
        },
        "required": [
          "status",
          "recommendations"
        ],
        "example": {
          "status": "READY",
          "recommendations": [
            {
              "nutrient": "P2O5",
              "earliest": "2021-10-31T00:00:00Z",
              "latest": "2021-11-15T00:00:00Z"
            }
          ]
        }
      },
      "AdviceRequest": {
        "type": "object",
        "properties": {
          "field_urn": {
            "$ref": "#/components/schemas/FieldURN"
          },
          "nutrients": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Nutrient"
            }
          },
          "applications": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Application"
            }
          },
          "ratio": {
            "type": "number",
            "description": "Percentage of the season's requirements to reach (default=100). This can be used for when doing multiple applications over a season instead of all-at-once"
          },
          "notification_url": {
            "type": "string",
            "format": "uri",
            "description": "Invoked with POST with an 'Advice' body (see components) when applicable"
          }
        },
        "required": [
          "field_urn",
          "nutrients",
          "applications"
        ]
      },
      "Advice": {
        "type": "object",
        "properties": {
          "urn": {
            "$ref": "#/components/schemas/AdviceURN"
          },
          "type": {
            "type": "string",
            "pattern": "fertilization"
          },
          "field_urn": {
            "$ref": "#/components/schemas/FieldURN"
          },
          "applications": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Application"
            }
          },
          "status": {
            "type": "string",
            "enum": [
              "IN_PROGRESS",
              "CONFIGURATION_REQUIRED",
              "READY",
              "FAILED"
            ],
            "description": "status of the advice"
          },
          "configuration_url": {
            "type": "string",
            "description": "A 'browser URL' to a proprietary advisor UI where the user may provide additional information required to prepare the advice. A well-behaved FMIS will present his users with a visual indication and the means to click on this link when this attribute is present for advices with status CONFIGURATION_REQUIRED."
          }
        },
        "required": [
          "urn",
          "type",
          "field_urn",
          "applications",
          "status"
        ]
      },
      "Application": {
        "type": "object",
        "properties": {
          "application_ref": {
            "type": "string",
            "pattern": "^\\w+$"
          },
          "product": {
            "$ref": "#/components/schemas/Product"
          }
        },
        "required": [
          "application_ref",
          "product"
        ]
      },
      "ApplicationDetails": {
        "type": "object",
        "properties": {
          "application_ref": {
            "type": "string",
            "pattern": "^\\w+$"
          },
          "product": {
            "$ref": "#/components/schemas/Product"
          },
          "application_map": {
            "type": "object",
            "properties": {
              "total_amount": {
                "type": "number",
                "format": "float"
              },
              "download_url": {
                "type": "string",
                "format": "uri",
                "description": "URL to download the GeoPackage application_map (with GET and service Bearer token). Application maps should be requested just-in-time, just before starting the actual work on a field."
              },
              "url_expires_at": {
                "type": "string",
                "format": "date-time",
                "description": "date/time at which download URL expires"
              }
            },
            "required": [
              "total_amount",
              "download_url"
            ]
          }
        },
        "required": [
          "application_ref",
          "product",
          "application_map"
        ]
