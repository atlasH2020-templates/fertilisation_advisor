{
  "openapi": "3.0.1",
  "info": {
    "title": "fertilisation_advisor API",
    "description": "API specification for the fertilisation_advisor service template",
    "version": "0.2.1"
  },
  "servers": [
    {
      "url": "https://<domain>/<path>"
    }
  ],
  "tags": [
    {
      "name": "Advices"
    },
    {
      "name": "Applications"
    }
  ],
  "paths": {
    "/advices": {
      "post": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "tags": [
          "Advices"
        ],
        "summary": "Prepare advice (prepare_advice)",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AdvicePreparationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Advice"
                },
                "example": {
                  "urn": "urn:com.agricircle.atlas.fertilization_advisor:1E371D44-59AE-4AF1-9570-9743DD3BA613",
                  "field_urn": "urn:com.agricircle.atlas.field_data:FDBE6F55-6179-4B88-9177-4AFBED33ADAC",
                  "nutrients": [
                    "P2O5",
                    "K2O"
                  ],
                  "status": "PREPARING",
                  "status_message": "..."
                }
              }
            }
          },
          "401": {
            "description": "Invalid or missing credentials",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DetailedError"
                }
              },
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleError"
                }
              }
            }
          },
          "429": {
            "description": "Too many requests",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DetailedError"
                }
              },
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleError"
                }
              }
            }
          }
        }
      }
    },
    "/advices/{urn}": {
      "get": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "tags": [
          "Advices"
        ],
        "summary": "Retrieve status for an advice preparation (get_advice_status)",
        "parameters": [
          {
            "description": "the URN of an advice (urn:<service_id>:<internal_id>)",
            "name": "urn",
            "in": "path",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/AdviceURN"
            },
            "example": "urn:com.agricircle.atlas.fertilisation_advisor:1E371D44-59AE-4AF1-9570-9743DD3BA613"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Advice"
                },
                "example": {
                  "urn": "urn:com.agricircle.atlas.fertilization_advisor:1E371D44-59AE-4AF1-9570-9743DD3BA613",
                  "field_urn": "urn:com.agricircle.atlas.field_data:FDBE6F55-6179-4B88-9177-4AFBED33ADAC",
                  "nutrients": [
                    "P2O5",
                    "K2O"
                  ],
                  "status": "PREPARING",
                  "status_message": "..."
                }
              }
            }
          },
          "401": {
            "description": "Invalid or missing credentials",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DetailedError"
                }
              },
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleError"
                }
              }
            }
          },
          "404": {
            "description": "The advice was not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DetailedError"
                }
              },
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleError"
                }
              }
            }
          },
          "429": {
            "description": "Too many requests",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DetailedError"
                }
              },
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleError"
                }
              }
            }
          }
        }
      },
      "delete": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "tags": [
          "Advices"
        ],
        "summary": "Cancel an existing advice (cancel_advice)",
        "parameters": [
          {
            "description": "the URN of an advice (urn:<service_id>:<internal_id>)",
            "name": "urn",
            "in": "path",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/AdviceURN"
            },
            "example": "urn:com.agricircle.atlas.fertilisation_advisor:1E371D44-59AE-4AF1-9570-9743DD3BA613"
          }
        ],
        "responses": {
          "204": {
            "description": "successful operation"
          },
          "401": {
            "description": "Invalid or missing credentials",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DetailedError"
                }
              },
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleError"
                }
              }
            }
          },
          "404": {
            "description": "The advice was not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DetailedError"
                }
              },
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleError"
                }
              }
            }
          },
          "429": {
            "description": "Too many requests",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DetailedError"
                }
              },
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleError"
                }
              }
            }
          }
        }
      }
    },
    "/applications": {
      "post": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "tags": [
          "Applications"
        ],
        "summary": "Inform the service of the planned applications (planned_applications)",
        "parameters": [
          {
            "description": "the URN of an advice (urn:<service_id>:<internal_id>)",
            "name": "advice",
            "in": "query",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/AdviceURN"
            },
            "example": "urn:com.agricircle.atlas.fertilisation_advisor:1E371D44-59AE-4AF1-9570-9743DD3BA613"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ApplicationsPlan"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "successful operation"
          },
          "400": {
            "description": "Invalid or missing parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DetailedError"
                }
              },
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleError"
                }
              }
            }
          },
          "401": {
            "description": "Invalid or missing credentials",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DetailedError"
                }
              },
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleError"
                }
              }
            }
          },
          "404": {
            "description": "The advice was not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DetailedError"
                }
              },
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleError"
                }
              }
            }
          },
          "409": {
            "description": "Conflict - service does not allow updating existing planned applications",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DetailedError"
                }
              },
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleError"
                }
              }
            }
          },
          "429": {
            "description": "Too many requests",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DetailedError"
                }
              },
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleError"
                }
              }
            }
          }
        }
      }
    },
    "/applications/{application_ref}": {
      "get": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "tags": [
          "Applications"
        ],
        "summary": "Get advice's application information for selected application reference (get_application_info)",
        "parameters": [
          {
            "description": "the URN of an advice (urn:<service_id>:<internal_id>)",
            "name": "advice",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "urn:com.agricircle.atlas.fertilisation_advisor:1E371D44-59AE-4AF1-9570-9743DD3BA613"
          },
          {
            "description": "an application reference configured in plan_applications",
            "name": "application_ref",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "slurry"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Application"
                }
              }
            }
          },
          "401": {
            "description": "Invalid or missing credentials",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DetailedError"
                }
              },
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleError"
                }
              }
            }
          },
          "404": {
            "description": "The advice or the application reference was not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DetailedError"
                }
              },
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleError"
                }
              }
            }
          },
          "429": {
            "description": "Too many requests",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DetailedError"
                }
              },
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "FieldURN": {
        "type": "string",
        "pattern": "^urn:[a-z][a-z0-9_.\\-]*:[\\w-.]+",
        "description": "Uniform resource name of a field with the syntax `urn:<service_id>:<internal_id>`. <service_id> must be the id of a valid and active ATLAS service"
      },
      "AdviceURN": {
        "type": "string",
        "pattern": "^urn:[a-z][a-z0-9_.\\-]*:[\\w-.]+",
        "description": "Uniform resource name of an advice with the syntax `urn:<service_id>:<internal_id>`. <service_id> must be the id of a valid and active ATLAS service"
      },
      "Advice": {
        "type": "object",
        "properties": {
          "urn": {
            "$ref": "#/components/schemas/AdviceURN",
            "readOnly": true
          },
          "field_urn": {
            "$ref": "#/components/schemas/FieldURN"
          },
          "nutrients": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/NutrientType"
            }
          },
          "status": {
            "type": "string",
            "enum": [
              "PREPARING",
              "CONFIGURATION_REQUIRED",
              "READY",
              "FAILED"
            ],
            "readOnly": true,
            "description": "status of the advice preparation"
          },
          "status_message": {
            "type": "string",
            "readOnly": true,
            "description": "end-user-friendly message describing the status. In the special case where status is CONFIGURATION_REQUESTED, the message MUST be a browser URL to a configuration UI where further configuration can take place"
          }
        },
        "required": [
          "urn",
          "field_urn",
          "nutrients",
          "status"
        ]
      },
      "AdvicePreparationRequest": {
        "type": "object",
        "properties": {
          "field_urn": {
            "$ref": "#/components/schemas/FieldURN"
          },
          "nutrients": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/NutrientType"
            }
          },
          "notification_url": {
            "type": "string",
            "format": "uri"
          }
        },
        "example": [
          {
            "field_urn": "urn:com.agricircle.atlas.field_data:FDBE6F55-6179-4B88-9177-4AFBED33ADAC",
            "nutrients": [
              "P2O5",
              "K2O"
            ],
            "notification_url": "https://consumer.com/advices/callback?secret=b7a3bc3f-c161-4e67-87e8-582a49e951b5"
          }
        ]
      },
      "Product": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "unit": {
            "type": "string",
            "enum": [
              "kg",
              "l"
            ]
          },
          "nutrients": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "nutrient": {
                  "$ref": "#/components/schemas/NutrientType"
                },
                "amount": {
                  "type": "number",
                  "format": "float",
                  "description": "Grams of nutrient per product unit"
                }
              }
            }
          }
        }
      },
      "Application": {
        "type": "object",
        "properties": {
          "application_ref": {
            "type": "string",
            "pattern": "^\\w+$"
          },
          "product": {
            "$ref": "#/components/schemas/Product"
          },
          "application_map": {
            "readOnly": true,
            "type": "object",
            "properties": {
              "download_url": {
                "type": "string",
                "format": "uri",
                "description": "URL to download the application_map (with HTTPS GET). NO AUTHORIZATION HEADERS MUST BE SUPPLIED. Application maps should be delivered just-in-time, just before starting the actual work on a field."
              },
              "url_expires_at": {
                "type": "string",
                "format": "date-time",
                "description": "date/time at which download URL expires"
              }
            }
          },
          "amount": {
            "type": "number",
            "format": "float",
            "readOnly": true
          }
        },
        "example": {
          "application_ref": "slurry",
          "product": {
            "name": "Cow slurry",
            "unit": "l",
            "nutrients": {
              "N": 100,
              "P2O5": 50,
              "K2O": 30,
              "MgO": 3
            }
          },
          "application_map": {
            "download_url": "https://some_arbitrary_url",
            "url_expires_at": "2021-10-31T15:32:00Z"
          },
          "amount": {
            "total": 75000
          }
        }
      },
      "ApplicationsPlan": {
        "type": "object",
        "properties": {
          "target_requirements": {
            "type": "number",
            "format": "float",
            "description": "Percentage of the season's requirements to reach (default=100%). This can be used for when doing multiple applications over a season instead of all-at-once"
          },
          "applications": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Application"
            }
          }
        },
        "required": [
          "applications"
        ],
        "example": {
          "applications": [
            {
              "application_ref": "slurry",
              "product": {
                "name": "Cow slurry",
                "unit": "l",
                "nutrients": {
                  "N": 100,
                  "P2O5": 50,
                  "K2O": 30,
                  "MgO": 3
                }
              }
            },
            {
              "application_ref": "phosphorus",
              "product": {
                "name": "P-rich product",
                "unit": "kg",
                "nutrients": {
                  "N": 1,
                  "P2O5": 350,
                  "K2O": 60
                }
              }
            },
            {
              "application_ref": "potassium",
              "product": {
                "name": "K-rich product",
                "unit": "kg",
                "nutrients": {
                  "N": 7.2,
                  "P2O5": 35.5,
                  "K2O": 422
                }
              }
            }
          ],
          "target_requirements": 50
        }
      },
      "NutrientType": {
        "type": "string",
        "enum": [
          "N",
          "P2O5",
          "K2O",
          "CaCO3",
          "Ca",
          "MgO",
          "S"
        ]
      },
      "SimpleError": {
        "type": "string",
        "description": "Plain text message (may be empty).",
        "example": "optional error message"
      },
      "DetailedError": {
        "type": "object",
        "description": "This defines the structure of an error payload when one is present. Actual messages and additional error information content may change from one implementation to another",
        "properties": {
          "message": {
            "type": "string",
            "description": "error description"
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Additional detailed information"
          }
        },
        "required": [
          "message"
        ],
        "example": {
          "message": "general error message",
          "errors": [
            "optional",
            "additional",
            "details"
          ]
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}
